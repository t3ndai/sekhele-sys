<%= form_with(model: [organization, performance_review]) do |form| %>
  <% if performance_review.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(performance_review.errors.count, "error") %> prohibited this performance_review from being saved:</h2>
      <ul>
        <% performance_review.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :performance_review_type_id, style: "display: block" %>
    <%= form.collection_radio_buttons :performance_review_type_id, PerformanceReviewType.all, :id, lambda {|review_type| review_type.name.titlecase } %>
  </div>
  <div>
    <%= form.label :opens_on, style: "display: block" %>
    <%= form.date_field :opens_on %>
  </div>
  <div>
    <%= form.label :closes_on, style: "display: block" %>
    <%= form.date_field :closes_on %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
