<%= form_with(model: [local_assigns[:employee], org_asset]) do |form| %>
  <% if org_asset.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(org_asset.errors.count, "error") %> prohibited this org_asset from being saved:</h2>
      <ul>
        <% org_asset.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :asset_category_id, style: "display: block" %>
    <%= form.select :asset_category_id, @employee.organization.asset_categories.map { |asset_category| [asset_category.name, asset_category.id]} %>
  </div>
  <div>
    <%= form.label :date_given, style: "display: block" %>
    <%= form.date_field :date_given %>
  </div>
  <div>
    <%= form.label :date_returned, style: "display: block" %>
    <%= form.date_field :date_returned %>
  </div>
  <div>
    <%= form.label :asset_name, style: "display: block" %>
    <%= form.text_field :asset_name %>
  </div>
  <div>
    <%= form.label :asset_serial_number, style: "display: block" %>
    <%= form.text_field :asset_serial_number %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
