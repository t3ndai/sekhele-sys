<%= form_with(model: [:benefit, benefit_plan]) do |form| %>
  <% if benefit_plan.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(benefit_plan.errors.count, "error") %> prohibited this benefit_plan from being saved:</h2>
      <ul>
        <% benefit_plan.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :employer_contribution, style: "display: block" %>
    <%= form.number_field :employer_contribution %>
  </div>
  <div>
    <%= form.label :employee_contribution, style: "display: block" %>
    <%= form.number_field :employee_contribution %>
  </div>
  <div>
    <%= form.label :cover, style: "display: block" %>
    <%= form.collection_radio_buttons :cover, BenefitPlan.covers.keys, :to_s, :humanize %>
  </div>
  <div>
    <%= form.label :documents, style: "display: block" %>
    <%= form.file_field :documents, multiple: true %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
