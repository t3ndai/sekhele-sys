<%= form_with(model: [local_assigns[:organization], document]) do |form| %>
  <% if document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>
      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :document_type, style: "display: block" %>
    <%= form.collection_radio_buttons :document_type, Document.document_types, :second, :first %>
  </div>
  <div>
    <%= form.label :required, style: "display: block" %>
    <%= form.checkbox :required %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
