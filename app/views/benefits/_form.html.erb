<%= form_with(model: [:organization, benefit]) do |form| %>
  <% if benefit.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(benefit.errors.count, "error") %> prohibited this benefit from being saved:</h2>
      <ul>
        <% benefit.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :benefit_type_id, style: "display: block" %>
    <%= form.select :benefit_type_id, organization.benefit_types.map { |benefit_type| [benefit_type.name, benefit_type.id]} %>
  </div>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :valuation_type, style: "display: block" %>
    <%= form.select :valuation_type, Benefit.valuation_types %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
