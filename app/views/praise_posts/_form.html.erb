<%= form_with(model: [channel, praise_post]) do |form| %>
  <% if praise_post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(praise_post.errors.count, "error") %> prohibited this praise_post from being saved:</h2>
      <ul>
        <% praise_post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :nominee_id, style: "display: block" %>
    <%= form.select :nominee_id, channel.organization.employees.map {|employee| [employee.full_name, employee.id]}  %>
  </div>
  <div>
    <%= form.label :praise_type_id, style: "display: block" %>
    <%= form.collection_radio_buttons :praise_type_id, PraiseType.all, :id, lambda {|praise_type| praise_type.name.titlecase } %>
  </div>
  <div>
    <%= form.label :message, style: "display: block" %>
    <%= form.textarea :message %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
